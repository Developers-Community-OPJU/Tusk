<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="0.5dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/ui_light_blue">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="5dp"
            app:contentPadding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <TextView
                    android:id="@+id/admin_milestones_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 Milestones"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="@color/ui_red"
                    android:fontFamily="@font/roboto_bold"/>

                <TextView
                    android:id="@+id/admin_heading_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Experience Updation Required"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/ui_text_black"/>
                <TextView
                    android:id="@+id/admin_assignedby_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assigned by"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textColor="@color/ui_text_black"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/admin_date_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10 Oct , 2020"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/ui_text_black"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="end|center_vertical">

                        <TextView
                            android:id="@+id/admin_edit_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="edit"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:paddingEnd="12dp"
                            android:paddingStart="1dp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/ui_purple"/>
                        <TextView
                            android:id="@+id/admin_delete_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="delete"
                            android:paddingStart="12dp"
                            android:paddingEnd="1dp"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/ui_purple"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>