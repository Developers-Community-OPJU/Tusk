<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- No Action Bar theme. -->
    <style name="noActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ui_light_blue</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/ui_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
    <style name="progresbar_theme">
        <item name="colorAccent">@color/ui_light_blue</item>
    </style>
    <style name="floating_button_theme">
        <item name="colorAccent">@color/card_action_button</item>
    </style>

</resources>